MDScreen:
    name: "Main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .23}
            canvas:
                Color:
                    rgb:(238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
        MDRaisedButton:
            text: " "
            size_hint: .45, .08
            pos_hint: {"center_x": .8, "center_y": .1}
            md_bg_color: 170/255, 22/255, 1, 1
            padding: 15
            on_release:
                root.manager.transition.direction = "up"
                app.mudar_tela('botname')
        MDLabel:
            text: "Texto"
            theme_text_color: "Custom"
            text_color: 240/255, 240/255, 240/255, 1
            halign: "center"
            padding: 15
            pos_hint: {"center_x": .8, "center_y": .1}
            font_name: "Poppins-SemiBold.ttf"
        MDRaisedButton:
            text: " "
            size_hint: .45, .08
            pos_hint: {"center_x": .3, "center_y": .1}
            md_bg_color: 170/255, 22/255, 1, 1
            padding: 15
            on_release:
                root.manager.transition.direction = "up"
                app.mudar_tela("audio")
        MDLabel:
            text: "Audio"
            theme_text_color: "Custom"
            text_color: 240/255, 240/255, 240/255, 1
            halign: "center"
            padding: 15
            pos_hint: {"center_x": .3, "center_y": .1}
            font_name: "Poppins-SemiBold.ttf"


